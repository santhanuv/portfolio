---
import CardHeader from "../components/Card/CardHeader.astro";
import Card from "../components/Card/Card.astro";
import { experiences, education } from "../data/profile.json";
---

<section id="experience-section" class="bg-background">
  <div class="container-spacing">
    <div class="space-y-16">
      {/* Section Header */}
      <div class="mb-16 space-y-4 sm:text-center">
        <h3 class="text-foreground text-3xl font-bold md:text-4xl">
          Experience & Education
        </h3>
        <p class="text-muted-foreground mx-auto max-w-3xl text-lg text-balance">
          Building scalable systems and contributing to the engineering
          community
        </p>
      </div>

      {/* Experience Timeline */}
      <div class="space-y-12">
        <h4 class="text-foreground text-2xl font-semibold">
          Professional Experience
        </h4>
        <div class="space-y-8">
          {
            experiences.map((exp, i) => (
              <Card
                id={`experience-${i}`}
                description={exp.description}
                pointsHeader="Key Achievements"
                points={exp.achievements}
                technologies={exp.technologies}
              >
                <CardHeader
                  slot="header"
                  title={exp.role}
                  building={exp.company}
                  location={exp.location}
                  period={exp.period}
                  tag={exp.type}
                />
              </Card>
            ))
          }
        </div>
      </div>

      {/* Education */}
      <div class="space-y-8">
        <h4 class="text-foreground text-2xl font-semibold">Education</h4>
        <div class="grid gap-6 md:grid-cols-1">
          {
            education.map((edu, i) => (
              <Card id={`education-${i}`} description={edu.focus}>
                <CardHeader
                  slot="header"
                  title={edu.degree}
                  building={edu.school}
                  period={edu.period}
                  location={edu.location}
                />
              </Card>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
