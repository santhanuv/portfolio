---
import { Icon } from "astro-icon/components";
import { profileLinks } from "../data/profile.json";
---

<footer
  id="footer-section"
  class="bg-card border-border section-spacing border-t"
>
  <div class="container-spacing">
    <div class="space-y-8 py-12">
      {/* Main Content */}
      <div class="space-y-4 sm:text-center">
        <div class="mb-16 space-y-4">
          <h2
            class="text-foreground text-3xl font-bold md:text-4xl"
            id="contact-form-title"
          >
            Let's Connect
          </h2>
          <p
            class="text-muted-foreground mx-auto max-w-3xl text-lg text-balance"
          >
            Always open to new opportunities, collaborations, or deep technical
            discussions, especially around Go, distributed systems, or open
            source. Let’s connect and build something meaningful together!
          </p>
        </div>

        <form
          class="mx-auto max-w-xl space-y-6"
          aria-labelledby="contact-form-title"
        >
          <div>
            <label
              for="email"
              class="text-foreground mx-1 mb-2 block text-left text-sm leading-6 font-medium"
            >
              Email Address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="you@example.com"
              required
              class="bg-background text-foreground border-input focus:border-primary focus:ring-primary dark:focus:border-primary-dark h-12 w-full rounded-lg border px-4 py-2 shadow-sm transition-colors duration-200 focus:ring-1"
            />
          </div>

          <div>
            <label
              for="message"
              class="text-foreground mx-1 mb-2 block text-left text-sm leading-6 font-medium"
            >
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              placeholder="How can I help you?"
              required
              class="bg-background text-foreground border-input focus:border-primary focus:ring-primary dark:focus:border-primary-dark w-full resize-none rounded-lg border px-4 py-3 shadow-sm transition-colors duration-200 focus:ring-1"
            ></textarea>
          </div>

          {/* Primary CTA */}
          <div
            class="flex flex-col justify-center gap-4 sm:flex-row sm:items-center"
          >
            <a class="btn-hero btn-size-lg grow" aria-label="Send Email">
              <Icon name="mail" class="mr-2 h-4 w-4" />
              Send
            </a>
            <a
              class="btn-outline btn-size-lg"
              href="Santhanu_Vinod_Resume.pdf"
              download="Santhanu_Vinod_Resume.pdf"
              aria-label="Download Resume"
            >
              <Icon name="download" class="mr-2 h-4 w-4" />
              Download Resume
            </a>
          </div>
          <p class="text-muted-foreground pt-2 text-center text-xs">
            I typically respond within 1-2 business days.
          </p>
        </form>

        {/* Social Links */}
        <div class="flex justify-center gap-3 pt-4">
          <a
            class="btn-outline btn-size-icon"
            href={profileLinks.github}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub Profile"
          >
            <Icon name="github" class="icon-md" />
          </a>
          <a
            class="btn-outline btn-size-icon"
            href={profileLinks.gitlab}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitLab Profile"
          >
            <Icon name="gitlab" class="icon-md" />
          </a>
          <a
            class="btn-outline btn-size-icon"
            href={profileLinks.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn Profile"
          >
            <Icon name="linkedin" class="icon-md" />
          </a>
        </div>
      </div>

      {/* Footer Info */}
      <div class="border-border border-t pt-8">
        <div
          class="text-muted-foreground flex flex-col items-center justify-center gap-4 text-sm sm:flex-row"
        >
          <div class="flex items-center gap-2">
            <span>© 2025</span>
            <span class="text-muted-foreground/60">•</span>
            <span>Built using Astro & Tailwind</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
